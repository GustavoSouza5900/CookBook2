@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar - CookBook";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cookbook-styles.css">
}

<div class="navbar-spacer"></div>

<main class="auth-page">
    <div class="auth-container">
        
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-utensils"></i>
                </div>
                <h1 class="auth-title">Crie sua conta</h1>
                <p class="auth-subtitle">Junte-se à nossa comunidade de chefs</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert-error" role="alert"></div>
                
                        <div class="form-group">
            <label asp-for="Input.Username" class="form-label">
                <i class="fas fa-user-tag"></i>
                Nome de Usuário
            </label>
            <input asp-for="Input.Username" 
                class="form-input" 
                autocomplete="username" 
                aria-required="true" 
                placeholder="Ex: ChefCozinheiro" />
            <span asp-validation-for="Input.Username" class="form-error"></span>
        </div>
            <div class="form-group">
        <label asp-for="Input.ProfileImage" class="form-label">
            <i class="fas fa-camera"></i>
            Foto de Perfil (Opcional)
        </label>
        <input asp-for="Input.ProfileImage" type="file" class="form-input" accept="image/*" />
        <span asp-validation-for="Input.ProfileImage" class="form-error"></span>
    </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="form-label">
                <i class="fas fa-envelope"></i>
                Email
            </label>
            <input asp-for="Input.Email" 
                class="form-input" 
                autocomplete="email" 
                aria-required="true" 
                placeholder="seu@email.com" />
            <span asp-validation-for="Input.Email" class="form-error"></span>
        </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">
                        <i class="fas fa-lock"></i>
                        Senha
                    </label>
                    <input asp-for="Input.Password" 
                           class="form-input" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="form-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="fas fa-lock"></i>
                        Confirmar Senha
                    </label>
                    <input asp-for="Input.ConfirmPassword" 
                           class="form-input" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="form-error"></span>
                </div>
                
                <button id="registerSubmit" type="submit" class="btn-cookbook btn-primary btn-block">
                    <i class="fas fa-user-plus"></i>
                    Criar Conta
                </button>
            </form>

            <div class="auth-divider">
                <span>ou</span>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="external-logins">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" 
                                    class="btn-cookbook btn-outline btn-block" 
                                    name="provider" 
                                    value="@provider.Name" 
                                    title="Cadastrar usando @provider.DisplayName">
                                <i class="fab fa-@provider.Name.ToLower()"></i>
                                Cadastrar com @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }

            <div class="auth-footer">
                <p class="auth-footer-text">
                    Já tem uma conta?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-accent">
                        Entrar agora
                    </a>
                </p>
            </div>
        </div>

        <div class="auth-illustration">
            <div class="illustration-content">
                <i class="fas fa-hat-chef"></i>
                <h2>Comece sua jornada</h2>
                <p>Descubra, crie e compartilhe receitas incríveis</p>
                
                <div class="stats-mini">
                    <div class="stat-mini">
                        <i class="fas fa-heart"></i>
                        <span>100% Gratuito</span>
                    </div>
                    <div class="stat-mini">
                        <i class="fas fa-shield-alt"></i>
                        <span>Seguro</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}