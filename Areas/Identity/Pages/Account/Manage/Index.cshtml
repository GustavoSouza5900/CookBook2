@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    
    // Recupera o usuário para exibir a foto atual.
    // O '!' (operador bang) é usado para garantir ao compilador que 'user' não será nulo aqui
    // já que o OnGetAsync() garante que o usuário existe antes de renderizar a página.
    var user = await Model.UserManager.GetUserAsync(User);
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        
        <form id="profile-form" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken() 
            
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-4 text-center">
                <label asp-for="Input.ProfileImage" class="form-label d-block fw-bold">Foto de Perfil</label>
                
                <div class="mb-3">
                    @{
                        // Verifica se a URL existe E se NÃO é a URL da foto padrão
                        bool hasActualProfilePicture = 
                            !string.IsNullOrEmpty(user?.ProfilePictureUrl) &&
                            !user.ProfilePictureUrl!.Contains("default-profile.png");
                    }

                    @if (hasActualProfilePicture)
                    {
                        <img src="@user!.ProfilePictureUrl" 
                             alt="Foto de Perfil" 
                             style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%; border: 4px solid #eee;" />
                    }
                    else
                    {
                        <div style="width: 150px; height: 150px; background-color: #ddd; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 3rem; color: #888;">
                             @if (!string.IsNullOrEmpty(user?.UserName))
                             {
                                 @user.UserName.Substring(0, 1).ToUpper()
                             }
                             else
                             {
                                 <i class="fas fa-user"></i>
                             }
                        </div>
                    }
                </div>

                <input asp-for="Input.ProfileImage" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewUserName" class="form-control" placeholder="Seu nome de usuário." />
                <label asp-for="Input.NewUserName" class="form-label"></label>
                <span asp-validation-for="Input.NewUserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Seu email." disabled />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Seu telefone." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvar Alterações</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}