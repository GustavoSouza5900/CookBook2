@model CookBook.Models.Receita

@{
    ViewData["Title"] = "Excluir Receita";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cookbook-styles-extended.css">
}

<div class="navbar-spacer"></div>

<main class="delete-page">
    <div class="delete-container">
        
        @* Header de Aviso *@
        <div class="delete-header">
            <div class="delete-icon-warning">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1>Excluir Receita</h1>
            <p class="delete-warning">Tem certeza que deseja excluir esta receita? Esta ação não pode ser desfeita.</p>
        </div>

        @* Card com Detalhes da Receita *@
        <div class="delete-recipe-card">
            
            @* Imagem da Receita *@
            @if (!string.IsNullOrEmpty(Model.ImagemUrl))
            {
                <div class="delete-recipe-image">
                    <img src="@Model.ImagemUrl" alt="@Model.Titulo" />
                </div>
            }

            @* Informações da Receita *@
            <div class="delete-recipe-info">
                <h2 class="delete-recipe-title">@Model.Titulo</h2>
                
                <div class="delete-info-grid">
                    <div class="delete-info-item">
                        <div class="delete-info-label">
                            <i class="fas fa-clock"></i>
                            Tempo de Preparo
                        </div>
                        <div class="delete-info-value">@Model.TempoPreparoMinutos minutos</div>
                    </div>

                    <div class="delete-info-item">
                        <div class="delete-info-label">
                            <i class="fas fa-user"></i>
                            Autor
                        </div>
                        <div class="delete-info-value">@Model.User?.UserName</div>
                    </div>

                    <div class="delete-info-item full-width">
                        <div class="delete-info-label">
                            <i class="fas fa-list-ol"></i>
                            Instruções
                        </div>
                        <div class="delete-info-value instructions-preview">@Model.Instrucoes</div>
                    </div>
                </div>
            </div>
        </div>

        @* Botões de Ação *@
        <form asp-action="Delete" class="delete-actions">
            <input type="hidden" asp-for="Id" />
            
            <div class="delete-buttons">
                <a asp-action="Index" class="btn-cookbook btn-outline">
                    <i class="fas fa-arrow-left"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn-cookbook btn-danger-custom">
                    <i class="fas fa-trash-alt"></i>
                    Confirmar Exclusão
                </button>
            </div>
        </form>

    </div>
</main>
