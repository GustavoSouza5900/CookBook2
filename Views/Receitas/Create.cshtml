@model CookBook.ViewModels.ReceitaCreateViewModel

@{
    ViewData["Title"] = "Criar Receita";
}
<h1 class="mb-4">Criar Noova Receita</h1>
<div class="row">
    <div class="col-lg-10 mx-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="card p-4 shadow-sm mb-4">
                <h5 class="card-title text-success"><i class="fas fa-utensils me-2"></i> Informações Básicas</h5>
                
                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TempoPreparoMinutos" class="form-label"></label>
                        <input asp-for="TempoPreparoMinutos" class="form-control" type="number" min="1" />
                        <span asp-validation-for="TempoPreparoMinutos" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card p-4 shadow-sm mb-4">
                <h5 class="card-title text-warning"><i class="fas fa-list-ol me-2"></i> Instruções / Modo de Preparo</h5>
                <p class="text-muted small">Escreva os passos detalhadamente, um passo por linha.</p>

                <div class="mb-3">
                    <label asp-for="Instrucoes" class="form-label"></label>
                    <textarea asp-for="Instrucoes" class="form-control" rows="15"></textarea>
                    <span asp-validation-for="Instrucoes" class="text-danger"></span>
                </div>
            </div>

            <div class="card p-4 shadow-sm mb-4">
                <h5 class="card-title text-primary"><i class="fas fa-image me-2"></i> Imagem de Capa</h5>
                <div class="mb-3">
                    <label asp-for="ImagemArquivo" class="form-label">Adicionar Imagem</label>
                    <input asp-for="ImagemArquivo" type="file" class="form-control" accept="image/*" />
                </div>
            </div>
            
            <div class="card p-4 shadow-sm mb-4">
                <h5 class="card-title text-info"><i class="fas fa-list-ul me-2"></i> Ingredientes</h5>
                <p class="text-muted small">Use a tabela para gerenciar os ingredientes desta receita.</p>
                
                <div class="row mb-3">
                    <div class="col-md-5">
                        <label for="IngredienteNome" class="form-label">Nome do Ingrediente</label>
                        <input type="text" id="IngredienteNome" class="form-control" list="listaIngredientes" placeholder="Ex: Farinha de Trigo">
                        
                        <datalist id="listaIngredientes">
                            @foreach(var item in ViewBag.IngredientesDisponiveis as List<CookBook.Models.Ingrediente> ?? new List<CookBook.Models.Ingrediente>())
                            {
                                <option value="@item.Nome"></option>
                            }
                        </datalist>
                    </div>
                    <div class="col-md-5">
                        <label for="IngredienteQuantidade" class="form-label">Quantidade</label>
                        <input type="text" id="IngredienteQuantidade" class="form-control" placeholder="Ex: 2 xícaras">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-secondary w-100" onclick="adicionarIngrediente()">Adicionar</button>
                    </div>
                </div>

                <table id="tabelaIngredientes" class="table table-striped table-bordered">
                    <thead>
                        <tr><th>Ingrediente</th><th>Quantidade</th><th style="width: 50px;">Ação</th></tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <input type="hidden" asp-for="IngredientesInputData" id="ingredientesInputData" />
                <span asp-validation-for="IngredientesInputData" class="text-danger"></span>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-5">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary btn-lg shadow-sm" />
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let ingredientesAdicionados = [];
        const inputData = document.getElementById('ingredientesInputData');
        const tabela = document.getElementById('tabelaIngredientes').getElementsByTagName('tbody')[0];

        function adicionarIngrediente() {
            const nomeInput = document.getElementById('IngredienteNome');
            const qtdInput = document.getElementById('IngredienteQuantidade');
            const nome = nomeInput.value.trim();
            const quantidade = qtdInput.value.trim();

            if (!nome || !quantidade) {
                alert('Por favor, preencha o Nome e a Quantidade dos ingredientes.');
                return;
            }

            ingredientesAdicionados.push({ nome: nome, quantidade: quantidade });
            
            renderizarTabela();

            nomeInput.value = '';
            qtdInput.value = '';
        }

        function removerIngrediente(index) {
            ingredientesAdicionados.splice(index, 1);
            renderizarTabela();
        }

        function renderizarTabela() {
            tabela.innerHTML = '';
            let dataString = '';

            ingredientesAdicionados.forEach((item, index) => {
                // Cria a linha na tabela para exibição
                const row = tabela.insertRow();
                row.insertCell().textContent = item.nome;
                row.insertCell().textContent = item.quantidade;
                
                const acaoCell = row.insertCell();
                const btnRemover = document.createElement('button');
                btnRemover.textContent = 'Remover';
                btnRemover.className = 'btn btn-danger btn-sm';
                btnRemover.type = 'button';
                btnRemover.onclick = () => removerIngrediente(index);
                acaoCell.appendChild(btnRemover);

                // Atualiza a string formatada para o Controller (Nome|Quantidade;)
                dataString += `${item.nome}|${item.quantidade};`;
            });

            // Atualiza o campo oculto que o Controller irá ler
            inputData.value = dataString; 
        }

        // Se houver dados de validação de erro, carregamos eles (opcional, mas bom para UX)
        // Se a validação falhar no POST, os dados virão no Model.IngredientesInputData
        document.addEventListener('DOMContentLoaded', () => {
            const initialData = inputData.value;
            if (initialData) {
                const pairs = initialData.split(';').filter(p => p.length > 0);
                pairs.forEach(pair => {
                    const [nome, quantidade] = pair.split('|');
                    ingredientesAdicionados.push({ nome, quantidade });
                });
                renderizarTabela();
            }
        });
    </script>
}
