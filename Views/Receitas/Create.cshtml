@model CookBook.ViewModels.ReceitaCreateViewModel

@{
    ViewData["Title"] = "Criar Receita - CookBook";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cookbook-styles.css">
}

<div class="navbar-spacer"></div>

@* ========== CREATE RECIPE PAGE ========== *@
<main class="recipes-page">
    
    @* Page Header *@
    <div class="recipes-header">
        <h1><i class="fas fa-plus-circle"></i> Criar Nova Receita</h1>
        <p>Compartilhe sua receita especial com a comunidade CookBook</p>
    </div>
    
    <form asp-action="Create" enctype="multipart/form-data" class="create-recipe-form">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        @* Informações Básicas *@
        <div class="form-section">
            <div class="form-section-header">
                <div class="section-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="section-title">
                    <h2>Informações Básicas</h2>
                    <p>Dados principais da sua receita</p>
                </div>
            </div>
            
            <div class="form-section-body">
                <div class="form-group">
                    <label asp-for="Titulo" class="form-label">
                        <i class="fas fa-pen"></i> Título da Receita
                    </label>
                    <input asp-for="Titulo" class="form-input" placeholder="Ex: Bolo de Chocolate Cremoso" />
                    <span asp-validation-for="Titulo" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TempoPreparoMinutos" class="form-label">
                        <i class="fas fa-clock"></i> Tempo de Preparo (minutos)
                    </label>
                    <input asp-for="TempoPreparoMinutos" class="form-input" type="number" min="1" placeholder="Ex: 45" />
                    <span asp-validation-for="TempoPreparoMinutos" class="form-error"></span>
                </div>
            </div>
        </div>

        @* Imagem de Capa *@
        <div class="form-section">
            <div class="form-section-header">
                <div class="section-icon section-icon-primary">
                    <i class="fas fa-image"></i>
                </div>
                <div class="section-title">
                    <h2>Imagem de Capa</h2>
                    <p>Adicione uma foto apetitosa da sua receita</p>
                </div>
            </div>
            
            <div class="form-section-body">
                <div class="form-group">
                    <label asp-for="ImagemArquivo" class="form-label">
                        <i class="fas fa-upload"></i> Selecionar Imagem
                    </label>
                    <input asp-for="ImagemArquivo" type="file" class="form-input-file" accept="image/*" />
                    <div class="form-hint">
                        <i class="fas fa-info-circle"></i>
                        Formatos aceitos: JPG, PNG, GIF (máx. 5MB)
                    </div>
                </div>
            </div>
        </div>

        @* Ingredientes *@
<div class="form-section">
    <div class="form-section-header">
        <div class="section-icon section-icon-info">
            <i class="fas fa-list-ul"></i>
        </div>
        <div class="section-title">
            <h2>Ingredientes</h2>
            <p>Liste todos os ingredientes necessários</p>
        </div>
    </div>
    
    <div class="form-section-body">
        <div class="ingredients-input-wrapper">
            <div class="ingredient-input-group">
                <div class="form-group flex-grow">
                    <label for="IngredienteNome" class="form-label">Nome do Ingrediente</label>
                    <input type="text" id="IngredienteNome" class="form-input" list="listaIngredientes" placeholder="Ex: Farinha de Trigo">
                    
                    <datalist id="listaIngredientes">
                        @foreach(var item in ViewBag.IngredientesDisponiveis as List<CookBook.Models.Ingrediente> ?? new List<CookBook.Models.Ingrediente>())
                        {
                            <option value="@item.Nome"></option>
                        }
                    </datalist>
                </div>
                
                <div class="form-group flex-grow">
                    <label for="IngredienteQuantidade" class="form-label">Quantidade</label>
                    <input type="text" id="IngredienteQuantidade" class="form-input" placeholder="Ex: 2 xícaras">
                </div>
                
                <div class="form-group-action">
                    <button type="button" class="btn-add-ingredient" onclick="adicionarIngrediente()">
                        <i class="fas fa-plus"></i>
                        <span>Adicionar</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="ingredients-table-wrapper">
            <table id="tabelaIngredientes" class="ingredients-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-carrot"></i> Ingrediente</th>
                        <th><i class="fas fa-balance-scale"></i> Quantidade</th>
                        <th class="action-column">Ação</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            
            <div id="emptyIngredientsState" class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-shopping-basket"></i>
                </div>
                <p>Nenhum ingrediente adicionado ainda</p>
            </div>
        </div>

        <input 
            asp-for="IngredientesInputData" 
            id="ingredientesInputData" 
            type="text" 
            style="height: 0; padding: 0; border: none; opacity: 0; position: absolute; top: 0;"
        />
        <span asp-validation-for="IngredientesInputData" class="form-error"></span>
        </div>
</div>

        @* Instruções *@
        <div class="form-section">
            <div class="form-section-header">
                <div class="section-icon section-icon-warning">
                    <i class="fas fa-list-ol"></i>
                </div>
                <div class="section-title">
                    <h2>Modo de Preparo</h2>
                    <p>Descreva os passos detalhadamente</p>
                </div>
            </div>
            
            <div class="form-section-body">
                <div class="form-group">
                    <label asp-for="Instrucoes" class="form-label">
                        <i class="fas fa-tasks"></i> Instruções
                    </label>
                    <textarea asp-for="Instrucoes" class="form-textarea" rows="15" placeholder="1. Pré-aqueça o forno a 180°C&#10;2. Em uma tigela, misture...&#10;3. Adicione os ingredientes secos..."></textarea>
                    <span asp-validation-for="Instrucoes" class="form-error"></span>
                    <div class="form-hint">
                        <i class="fas fa-lightbulb"></i>
                        Dica: Escreva cada passo em uma linha separada para melhor organização
                    </div>
                </div>
            </div>
        </div>
        
        @* Action Buttons *@
        <div class="form-actions">
            <button type="submit" class="btn-form-submit">
                <i class="fas fa-check"></i>
                Publicar Receita
            </button>
            <a asp-action="Index" class="btn-form-cancel">
                <i class="fas fa-arrow-left"></i>
                Cancelar
            </a>
        </div>
    </form>
    
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let ingredientesAdicionados = [];
        const inputData = document.getElementById('ingredientesInputData');
        const tabela = document.getElementById('tabelaIngredientes').getElementsByTagName('tbody')[0];
        const emptyState = document.getElementById('emptyIngredientsState');

        function adicionarIngrediente() {
            const nomeInput = document.getElementById('IngredienteNome');
            const qtdInput = document.getElementById('IngredienteQuantidade');
            const nome = nomeInput.value.trim();
            const quantidade = qtdInput.value.trim();

            if (!nome || !quantidade) {
                alert('Por favor, preencha o Nome e a Quantidade dos ingredientes.');
                return;
            }

            ingredientesAdicionados.push({ nome: nome, quantidade: quantidade });
            
            renderizarTabela();

            nomeInput.value = '';
            qtdInput.value = '';
            nomeInput.focus();
        }

        function removerIngrediente(index) {
            ingredientesAdicionados.splice(index, 1);
            renderizarTabela();
        }

        function renderizarTabela() {
            tabela.innerHTML = '';
            let dataString = '';

            if (ingredientesAdicionados.length === 0) {
                emptyState.style.display = 'flex';
            } else {
                emptyState.style.display = 'none';
            }

            ingredientesAdicionados.forEach((item, index) => {
                const row = tabela.insertRow();
                row.className = 'ingredient-row';
                
                const nomeCell = row.insertCell();
                nomeCell.textContent = item.nome;
                nomeCell.className = 'ingredient-name';
                
                const qtdCell = row.insertCell();
                qtdCell.textContent = item.quantidade;
                qtdCell.className = 'ingredient-quantity';
                
                const acaoCell = row.insertCell();
                acaoCell.className = 'ingredient-action';
                const btnRemover = document.createElement('button');
                btnRemover.innerHTML = '<i class="fas fa-trash"></i>';
                btnRemover.className = 'btn-remove-ingredient';
                btnRemover.type = 'button';
                btnRemover.onclick = () => removerIngrediente(index);
                btnRemover.title = 'Remover ingrediente';
                acaoCell.appendChild(btnRemover);

                dataString += `${item.nome}|${item.quantidade};`;
            });

            inputData.value = dataString; 
        }

        // Permitir adicionar ingrediente com Enter
        document.getElementById('IngredienteQuantidade').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                adicionarIngrediente();
            }
        });

        document.getElementById('IngredienteNome').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                document.getElementById('IngredienteQuantidade').focus();
            }
        });

        // Carregar dados existentes
        document.addEventListener('DOMContentLoaded', () => {
            const initialData = inputData.value;
            if (initialData) {
                const pairs = initialData.split(';').filter(p => p.length > 0);
                pairs.forEach(pair => {
                    const [nome, quantidade] = pair.split('|');
                    ingredientesAdicionados.push({ nome, quantidade });
                });
                renderizarTabela();
            } else {
                emptyState.style.display = 'flex';
            }
        });
    </script>
}
