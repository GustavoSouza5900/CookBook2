@model CookBook.ViewModels.ReceitaEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoPreparoMinutos" class="control-label"></label>
                <input asp-for="TempoPreparoMinutos" class="form-control" />
                <span asp-validation-for="TempoPreparoMinutos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrucoes" class="control-label"></label>
                <input asp-for="Instrucoes" class="form-control" />
                <span asp-validation-for="Instrucoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.ImagemUrlExistente))
                {
                    <label class="control-label">Imagem Atual:</label><br />
                    <img src="@Model.ImagemUrlExistente" style="max-width: 200px; height: auto;" class="mb-2" />
                }

                <label asp-for="NovaImagemArquivo" class="control-label">Nova Imagem de Capa</label>
                <input asp-for="NovaImagemArquivo" type="file" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Ingredientes Necess√°rios</label>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Sel.</th>
                            <th>Ingrediente</th>
                            <th>Quantidade (Ex: 2 colheres de sopa)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Ingredientes.Count; i++)
                        {
                            var ingrediente = Model.Ingredientes[i];
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@Model.Ingredientes[i].IngredienteId" />
                                    <input type="hidden" asp-for="@Model.Ingredientes[i].NomeIngrediente" />
                                    
                                    <input type="checkbox" asp-for="@Model.Ingredientes[i].Selecionado" /> 
                                </td>
                                <td>
                                    @ingrediente.NomeIngrediente
                                </td>
                                <td>
                                    <input asp-for="@Model.Ingredientes[i].Quantidade" class="form-control form-control-sm" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

