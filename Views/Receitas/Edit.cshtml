@model CookBook.ViewModels.ReceitaEditViewModel

@{
    ViewData["Title"] = "Editar Receita";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cookbook-styles-extended.css">
}

<div class="navbar-spacer"></div>

<main class="create-recipe-page">
    <div class="create-recipe-container">
        
        @* Page Header *@
        <div class="create-recipe-header">
            <div class="header-icon">
                <i class="fas fa-edit"></i>
            </div>
            <h1>Editar Receita</h1>
            <p>Atualize as informações da sua receita</p>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @* Card: Informações Básicas *@
            <div class="create-card">
                <div class="create-card-header">
                    <div class="create-card-icon icon-primary">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="create-card-title-group">
                        <h2 class="create-card-title">Informações Básicas</h2>
                        <p class="create-card-description">Título e tempo de preparo da receita</p>
                    </div>
                </div>

                <div class="create-card-body">
                    <div class="form-group">
                        <label asp-for="Titulo" class="form-label">
                            <i class="fas fa-heading"></i>
                            Título da Receita
                        </label>
                        <input asp-for="Titulo" class="form-input" placeholder="Ex: Bolo de Chocolate" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TempoPreparoMinutos" class="form-label">
                            <i class="fas fa-clock"></i>
                            Tempo de Preparo (minutos)
                        </label>
                        <input asp-for="TempoPreparoMinutos" class="form-input" type="number" min="1" placeholder="Ex: 45" />
                        <span asp-validation-for="TempoPreparoMinutos" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* Card: Imagem de Capa *@
            <div class="create-card">
                <div class="create-card-header">
                    <div class="create-card-icon icon-accent">
                        <i class="fas fa-image"></i>
                    </div>
                    <div class="create-card-title-group">
                        <h2 class="create-card-title">Imagem de Capa</h2>
                        <p class="create-card-description">Uma boa foto faz toda diferença!</p>
                    </div>
                </div>

                <div class="create-card-body">
                    @if (!string.IsNullOrEmpty(Model.ImagemUrlExistente))
                    {
                        <div class="current-image-preview">
                            <label class="form-label">
                                <i class="fas fa-images"></i>
                                Imagem Atual
                            </label>
                            <img src="@Model.ImagemUrlExistente" alt="Imagem atual da receita" />
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="NovaImagemArquivo" class="form-label">
                            <i class="fas fa-upload"></i>
                            Nova Imagem (Opcional)
                        </label>
                        <input asp-for="NovaImagemArquivo" type="file" class="form-input-file" accept="image/*" />
                        <p class="form-hint">Formatos aceitos: JPG, PNG, WebP (máx. 5MB)</p>
                    </div>
                </div>
            </div>

            @* Card: Ingredientes *@
            <div class="create-card">
                <div class="create-card-header">
                    <div class="create-card-icon icon-success">
                        <i class="fas fa-list-ul"></i>
                    </div>
                    <div class="create-card-title-group">
                        <h2 class="create-card-title">Ingredientes</h2>
                        <p class="create-card-description">Liste todos os ingredientes necessários</p>
                    </div>
                </div>

                <div class="create-card-body">
                    <div class="ingredient-input-group">
                        <div class="form-group ingredient-name">
                            <label for="IngredienteNome" class="form-label">Nome do Ingrediente</label>
                            <input type="text" id="IngredienteNome" class="form-input" list="listaIngredientes" placeholder="Ex: Farinha de Trigo">
                            
                            <datalist id="listaIngredientes">
                                @foreach(var item in ViewBag.IngredientesDisponiveis as List<CookBook.Models.Ingrediente> ?? new List<CookBook.Models.Ingrediente>())
                                {
                                    <option value="@item.Nome"></option>
                                }
                            </datalist>
                        </div>

                        <div class="form-group ingredient-quantity">
                            <label for="IngredienteQuantidade" class="form-label">Quantidade</label>
                            <input type="text" id="IngredienteQuantidade" class="form-input" placeholder="Ex: 2 xícaras">
                        </div>

                        <button type="button" class="btn-add-ingredient" onclick="adicionarIngrediente()">
                            <i class="fas fa-plus"></i>
                            Adicionar
                        </button>
                    </div>

                    <div class="ingredients-table-wrapper">
                        <table id="tabelaIngredientes" class="ingredients-table">
                            <thead>
                                <tr>
                                    <th>Ingrediente</th>
                                    <th>Quantidade</th>
                                    <th class="action-col">Ação</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        
                        <div class="ingredients-empty" id="ingredientsEmpty">
                            <i class="fas fa-carrot"></i>
                            <p>Nenhum ingrediente adicionado ainda</p>
                        </div>
                    </div>

                    <input type="hidden" asp-for="IngredientesInputData" id="ingredientesInputData" />
                    <span asp-validation-for="IngredientesInputData" class="text-danger"></span>
                </div>
            </div>

            @* Card: Instruções *@
            <div class="create-card">
                <div class="create-card-header">
                    <div class="create-card-icon icon-warning">
                        <i class="fas fa-list-ol"></i>
                    </div>
                    <div class="create-card-title-group">
                        <h2 class="create-card-title">Modo de Preparo</h2>
                        <p class="create-card-description">Descreva os passos detalhadamente</p>
                    </div>
                </div>

                <div class="create-card-body">
                    <div class="form-group">
                        <label asp-for="Instrucoes" class="form-label">
                            <i class="fas fa-align-left"></i>
                            Instruções
                        </label>
                        <textarea asp-for="Instrucoes" class="form-textarea" rows="12" placeholder="1. Preaqueça o forno a 180°C...&#10;2. Em uma tigela, misture...&#10;3. Adicione aos poucos..."></textarea>
                        <span asp-validation-for="Instrucoes" class="text-danger"></span>
                        <p class="form-hint">Escreva cada passo em uma nova linha para melhor organização</p>
                    </div>
                </div>
            </div>

            @* Botões de Ação *@
            <div class="create-actions">
                <a asp-action="Index" class="btn-cookbook btn-outline">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn-cookbook btn-primary">
                    <i class="fas fa-save"></i>
                    Salvar Alterações
                </button>
            </div>

        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let ingredientesAdicionados = [];
        const inputData = document.getElementById('ingredientesInputData');
        const tabela = document.getElementById('tabelaIngredientes').getElementsByTagName('tbody')[0];
        const emptyState = document.getElementById('ingredientsEmpty');
        
        function adicionarIngrediente() {
            const nomeInput = document.getElementById('IngredienteNome');
            const qtdInput = document.getElementById('IngredienteQuantidade');
            const nome = nomeInput.value.trim();
            const quantidade = qtdInput.value.trim();

            if (!nome || !quantidade) {
                alert('Por favor, preencha o Nome e a Quantidade dos ingredientes.');
                return;
            }

            ingredientesAdicionados.push({ nome: nome, quantidade: quantidade });
            
            renderizarTabela();

            nomeInput.value = '';
            qtdInput.value = '';
            nomeInput.focus();
        }

        function removerIngrediente(index) {
            ingredientesAdicionados.splice(index, 1);
            renderizarTabela();
        }

        function renderizarTabela() {
            tabela.innerHTML = '';
            let dataString = '';

            if (ingredientesAdicionados.length === 0) {
                emptyState.style.display = 'flex';
                return;
            } else {
                emptyState.style.display = 'none';
            }

            ingredientesAdicionados.forEach((item, index) => {
                const row = tabela.insertRow();
                row.insertCell().textContent = item.nome;
                row.insertCell().textContent = item.quantidade;
                
                const acaoCell = row.insertCell();
                const btnRemover = document.createElement('button');
                btnRemover.innerHTML = '<i class="fas fa-trash"></i>';
                btnRemover.className = 'btn-remove-ingredient';
                btnRemover.type = 'button';
                btnRemover.title = 'Remover ingrediente';
                btnRemover.onclick = () => removerIngrediente(index);
                acaoCell.appendChild(btnRemover);

                dataString += `${item.nome}|${item.quantidade};`;
            });

            inputData.value = dataString; 
        }

        document.addEventListener('DOMContentLoaded', () => {
            const jsonExistente = '@Html.Raw(Model.IngredientesExistentesJson)';
            
            if (jsonExistente && jsonExistente !== '[]' && jsonExistente !== '') {
                try {
                    const dadosIniciais = JSON.parse(jsonExistente);
                    ingredientesAdicionados = dadosIniciais.map(item => ({
                        nome: item.nome, 
                        quantidade: item.quantidade
                    }));
                    renderizarTabela();
                } catch (e) {
                    console.error("Erro ao carregar JSON de ingredientes existentes:", e);
                }
            } 
            else if (inputData.value) {
                const pairs = inputData.value.split(';').filter(p => p.length > 0);
                pairs.forEach(pair => {
                    const [nome, quantidade] = pair.split('|');
                    ingredientesAdicionados.push({ nome, quantidade });
                });
                renderizarTabela();
            }
            
            // Inicializa o estado vazio
            if (ingredientesAdicionados.length === 0) {
                emptyState.style.display = 'flex';
            }
        });

        // Permite adicionar ingrediente com Enter
        document.getElementById('IngredienteQuantidade').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                adicionarIngrediente();
            }
        });
    </script>
}
