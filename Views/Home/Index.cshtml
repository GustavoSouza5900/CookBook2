

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Literata:wght@400;600;700&family=Karla:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/cookbook-styles.css">
}

<div class="cookbook-wrapper">
    
    @* ========== HERO SECTION ========== *@
    <section class="cookbook-hero">
        <div class="hero-content">
            
            <div class="hero-badge">
                <i class="fas fa-sparkles"></i>
                Bem-vindo à sua cozinha digital
            </div>
            
            <h1 class="hero-title">
                <span class="brand">CookBook</span>
                <span class="subtitle">Sua Jornada Culinária</span>
            </h1>
            
            <p class="hero-description">
                Mais do que receitas. Uma comunidade de chefs apaixonados. 
                Compartilhe, aprenda e suba de nível enquanto cria pratos incríveis.
            </p>
            
            <div class="hero-actions">
                <a asp-controller="Receitas" asp-action="Create" class="btn-cookbook btn-primary">
                    <i class="fas fa-plus"></i>
                    Publicar Receita
                </a>
                <a asp-controller="Receitas" asp-action="Index" class="btn-cookbook btn-outline">
                    <i class="fas fa-book-open"></i>
                    Explorar Receitas
                </a>
            </div>
            
        </div>
    </section>
    
    @* ========== CONTENT SECTION ========== *@
    <section class="cookbook-content">
        <div class="content-grid">
            
            @* ===== XP System Card ===== *@
            <div class="cookbook-card card-xp">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div>
                        <h2 class="card-title">Sistema de XP</h2>
                        <p class="card-description">
                            Cada ação recompensa você com experiência para subir de nível e conquistar badges exclusivos.
                        </p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="xp-list">
                        <div class="xp-item">
                            <div class="xp-action">
                                <i class="fas fa-utensils"></i>
                                <span>Publicar uma Nova Receita</span>
                            </div>
                            <span class="xp-value">+100 XP</span>
                        </div>
                        <div class="xp-item">
                            <div class="xp-action">
                                <i class="fas fa-comment-dots"></i>
                                <span>Fazer um Comentário</span>
                            </div>
                            <span class="xp-value">+10 XP</span>
                        </div>
                        <div class="xp-item">
                            <div class="xp-action">
                                <i class="fas fa-heart"></i>
                                <span>Receber uma Curtida</span>
                            </div>
                            <span class="xp-value">+5 XP</span>
                        </div>
                        <div class="xp-item">
                            <div class="xp-action">
                                <i class="fas fa-medal"></i>
                                <span>Conquistar um Novo Badge</span>
                            </div>
                            <span class="xp-value">Bônus Variável</span>
                        </div>
                    </div>
                    
                    <a asp-controller="Profile" asp-action="Ranking" class="btn-cookbook btn-ghost btn-block">
                        <i class="fas fa-trophy"></i>
                        Ver Ranking Global
                    </a>
                </div>
            </div>
            
            @* ===== Getting Started Card ===== *@
            <div class="cookbook-card card-start">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-wand-magic-sparkles"></i>
                    </div>
                    <div>
                        <h2 class="card-title">Comece Agora</h2>
                        <p class="card-description">
                            Dê os primeiros passos na sua jornada culinária e torne-se uma lenda.
                        </p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="steps-list">
                        <div class="step-item">
                            <div class="step-marker"></div>
                            <span class="step-text">Registre-se para salvar suas receitas favoritas</span>
                        </div>
                        <div class="step-item">
                            <div class="step-marker"></div>
                            <span class="step-text">Publique uma receita simples para ganhar seu primeiro Badge</span>
                        </div>
                        <div class="step-item">
                            <div class="step-marker"></div>
                            <span class="step-text">Explore a lista e deixe sua opinião nos comentários</span>
                        </div>
                        <div class="step-item">
                            <div class="step-marker"></div>
                            <span class="step-text">Curta as receitas de outros Chefs para incentivá-los</span>
                        </div>
                    </div>
                    
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn-cookbook btn-accent btn-block">
                        <i class="fas fa-hat-chef"></i>
                        Começar Minha Jornada
                    </a>
                </div>
            </div>
            
        </div>
    </section>
    
    @* ========== STATS SECTION ========== *@
    <section class="cookbook-stats">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                @* Receitas (Usando o contador real) *@
                <div class="stat-value">@Model.TotalReceitas.ToString("N0")</div>
                <div class="stat-label">Receitas</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                @* Chefs (Usando o contador real) *@
                <div class="stat-value">@Model.TotalChefs.ToString("N0")</div>
                <div class="stat-label">Chefs</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-comments"></i>
                </div>
                @* Comentários (Usando o contador real) *@
                <div class="stat-value">@Model.TotalComentarios.ToString("N0")</div>
                <div class="stat-label">Comentários</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-heart"></i>
                </div>
                @* Curtidas (Usando o contador real) *@
                <div class="stat-value">@Model.TotalCurtidas.ToString("N0")</div>
                <div class="stat-label">Curtidas</div>
            </div>
        </div>
    </section>
    
</div>

@section Scripts {
    <script>
        // Animação de entrada dos elementos ao scroll
        document.addEventListener('DOMContentLoaded', function() {
            // Observer para animações ao entrar na viewport
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.style.animationPlayState = 'running';
                        // Parar de observar depois de animar uma vez
                        observer.unobserve(entry.target); 
                    }
                });
            }, observerOptions);
            
            // Observar cards e stats
            document.querySelectorAll('.cookbook-card, .stat-card').forEach(function(el) {
                // Inicializa pausado para a animação ser disparada pelo observer
                el.style.animationPlayState = 'paused'; 
                observer.observe(el);
            });
            
            // O BLOCO DE CÓDIGO DO HOVER (mouse enter/leave) FOI REMOVIDO DAQUI
            // POIS DEVE SER CONFIGURADO VIA CSS.
        });
    </script>

}
